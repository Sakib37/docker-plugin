{
   "name":"iperf-NSD",
   "vendor":"Fokus",
   "version":"0.1",
   "vnfd":[
      {
         "vendor":"tbr",
         "version":"0.1",
         "name":"iperf-server",
         "type":"server",
         "endpoint":"docker",
	 "configurations":{  
            "name":"server-configuration",
            "configurationParameters":[
	       {  
                  "confKey":"port",
                  "value":"5060"
               },
	       {  
                  "confKey":"name",
                  "value":"icscf"
               },
	       {  
                  "confKey":"diameter_port",
                  "value":"3869"
               }
            ]
         },
         "vdu":[
            {
               "vm_image":[
                  "ubuntu:14.04"
               ],
               "vimInstanceName":["docker"],
               "scale_in_out":1,
               "vnfc":[
                  {
                     "connection_point":[
                        {
                           "virtual_link_reference":"private",
                           "floatingIp":"random"
                        }
                     ]
                  }
               ]
            }
         ],
         "virtual_link":[
            {
               "name":"private"
            }
         ],
         "lifecycle_event":[  
	    {  
               "event":"CONFIGURE",
               "lifecycle_events":[
		        "install-zabbix.sh",
			"heal.sh"
               ]
            },
            {  
               "event":"INSTANTIATE",
               "lifecycle_events":[ 
			"install.sh"
               ]
            },
            {  
               "event":"START",
               "lifecycle_events":[
			"elasticapp-install.sh",
			"elastic_configure.sh"
               ]
            }          
         ],
         "deployment_flavour":[
		{  
            		"flavour_key":"m1.small"
       		}
         ],
         "vnfPackageLocation":"https://github.com/openbaton/vnf-scripts.git"
      },
      {
         "vendor":"tbr",
         "version":"0.1",
         "name":"iperf-client",
         "type":"client",
         "endpoint":"docker",
	 "configurations":{
            "name":"client-configuration",
            "configurationParameters":[
               {
                  "confKey":"port",
                  "value":"5061"
               },
               {
                  "confKey":"name",
                  "value":"icscf"
               },
               {
                  "confKey":"diameter_port",
                  "value":"3857"
               }
            ]
         },

         "vdu":[
            {
               "vm_image":[
                  "ubuntu:14.04"
               ],
               "vimInstanceName":["docker"],
               "scale_in_out":2,
               "vnfc":[
                  {
                     "connection_point":[
                        {
                           "floatingIp":"random",
                           "virtual_link_reference":"private"
                        }
                     ]
                  }
               ]
            }
         ],
         "virtual_link":[
            {
               "name":"private"
            }
         ],
         "lifecycle_event":[
            {
               "event":"CONFIGURE",
               "lifecycle_events":[
                        "install-zabbix.sh",
                        "heal.sh"
               ]
            },
            {
               "event":"INSTANTIATE",
               "lifecycle_events":[
                        "install.sh"
               ]
            },
            {
               "event":"START",
               "lifecycle_events":[
                        "elasticapp-install.sh",
                        "elastic_configure.sh"
               ]
            }
 
         ],
	"deployment_flavour":[
                {
                        "flavour_key":"m1.small"
                }
         ],
        "vnfPackageLocation":"https://github.com/openbaton/vnf-scripts.git"

      }
   ],
   "vnffgd":[],
   "vld":[
      {
         "name":"private"
      }
   ],
   "vnf_dependency":[
      {
         "source":{
            "name":"iperf-server"
         },
         "target":{
            "name":"iperf-client"
         },
         "parameters":[
            "private"
         ]
      }
   ]
}


